<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="370dp"
            android:layout_height="633dp"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Minha Conta"
                android:textColor="@color/purple_500"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.085" />

            <EditText
                android:id="@+id/edt_user_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:ems="10"
                android:hint="UsuÃ¡rio"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/textView13"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <EditText
                android:id="@+id/edt_email_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/edt_user_u"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edt_user_u"
                app:layout_constraintTop_toBottomOf="@+id/edt_user_u" />

            <EditText
                android:id="@+id/edt_pass_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/ic_baseline_password_24"
                android:ems="10"
                android:hint="Pass"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/edt_email_u"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edt_email_u"
                app:layout_constraintTop_toBottomOf="@+id/edt_email_u" />

            <Button
                android:id="@+id/edt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Atualizar"
                app:layout_constraintEnd_toEndOf="@+id/edt_pass_u"
                app:layout_constraintStart_toStartOf="@+id/edt_pass_u"
                app:layout_constraintTop_toBottomOf="@+id/edt_pass_u" />

            <Button
                android:id="@+id/button_gps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="GPS"
                app:layout_constraintEnd_toEndOf="@+id/edt_button"
                app:layout_constraintStart_toStartOf="@+id/edt_button"
                app:layout_constraintTop_toBottomOf="@+id/edt_button" />

            <Button
                android:id="@+id/button_del"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Excluir Conta"
                app:layout_constraintEnd_toEndOf="@+id/button_gps"
                app:layout_constraintStart_toStartOf="@+id/button_gps"
                app:layout_constraintTop_toBottomOf="@+id/button_gps" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>